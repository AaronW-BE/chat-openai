page {
    background-color: #efefef;
}

.search-box {
    align-items: center;
    padding: 10rpx;
    background-color: #fff;
    text-align: center;
}
.search-input {
    background-color: #fff;
    width: 740rpx;
    height: 210rpx;
    margin: 8rpx;
    font-size: 30rpx;
    padding: 8rpx;
    position: relative;
    border: 1px solid #eee;
    text-align: left;
}
.search-btn {
    display: inline-block;
    font-size: 34rpx;
    padding: 2rpx 26rpx;
    background-color: #1abc9c;
    color: #fff;
}
.spinner {
    width: 40px;
    height: 40px;

    position: relative;
    margin: 10px auto;
}

.double-bounce1, .double-bounce2 {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background-color: #fff;
    opacity: 0.6;
    position: absolute;
    top: 0;
    left: 0;

    -webkit-animation: sk-bounce 2.0s infinite ease-in-out;
    animation: sk-bounce 2.0s infinite ease-in-out;
}

.double-bounce2 {
    -webkit-animation-delay: -1.0s;
    animation-delay: -1.0s;
}

@-webkit-keyframes sk-bounce {
    0%, 100% { -webkit-transform: scale(0.0) }
    50% { -webkit-transform: scale(1.0) }
}

@keyframes sk-bounce {
    0%, 100% {
        transform: scale(0.0);
        -webkit-transform: scale(0.0);
    } 50% {
          transform: scale(1.0);
          -webkit-transform: scale(1.0);
      }
}

.gallery-wrp {
    display: flex;
    margin-top: 20rpx;
    justify-content: center;
}

.img-item {
    width: 500rpx;
    height: 500rpx;
}